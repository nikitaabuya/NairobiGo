<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF062F50">

    <TextView
        android:id="@+id/textview_client_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/client_intro"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/button_cleaner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:backgroundTint="#FF9800"
        android:text="@string/house_cleaner"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_plumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:text="@string/plumber"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_nanny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:text="@string/nanny"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_electrician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:text="@string/electrician"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_painter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:text="@string/painter"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_technician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:text="@string/technician"
        android:textSize="30sp"
        android:textStyle="bold"/>
</LinearLayout>